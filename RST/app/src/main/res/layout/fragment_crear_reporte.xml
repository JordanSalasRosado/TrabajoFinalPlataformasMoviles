<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="60dp"
    android:scrollbars="vertical"
    tools:context=".ui.reportes.CrearReporteFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/registro_atencion"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/registro_atencion_subtitulo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:labelFor="@id/numero_solicitud"
            android:text="@string/nro_solicitud"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txt_numero_solicitud"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:autofillHints=""
            android:background="@drawable/bordered_edittext"
            android:inputType="text"
            android:paddingStart="10dp"
            android:paddingEnd="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/maquinaria"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spn_maquinaria"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bordered_edittext"
            android:paddingStart="10dp"
            android:paddingEnd="10dp" />

        <ImageView
            android:id="@+id/img_maquinaria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:contentDescription="@string/empty_text"
            android:visibility="gone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/nro_serie"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txt_numero_serie"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:autofillHints=""
            android:background="@drawable/bordered_edittext"
            android:inputType="text"
            android:paddingStart="10dp"
            android:paddingEnd="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/anho_fabricacion"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txt_anho_fabricacion"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:autofillHints=""
            android:background="@drawable/bordered_edittext"
            android:inputType="text"
            android:paddingStart="10dp"
            android:paddingEnd="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:inputType="numberDecimal"
            android:text="@string/ingrese_horometro"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txt_horometro"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:autofillHints=""
            android:background="@drawable/bordered_edittext"
            android:hint="@string/ingrese_horometro_hint"
            android:inputType="text"
            android:paddingStart="10dp"
            android:paddingEnd="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:inputType="number"
            android:text="@string/ingrese_stir_2"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txt_stir_2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:autofillHints=""
            android:background="@drawable/bordered_edittext"
            android:hint="@string/ingrese_strir_2_hint"
            android:inputType="text"
            android:paddingStart="10dp"
            android:paddingEnd="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/ingrese_observaciones"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txt_observaciones"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="40dp"
            android:autofillHints=""
            android:background="@drawable/bordered_edittext"
            android:hint="@string/ingrese_observaciones_hint"
            android:inputType="text"
            android:paddingStart="10dp"
            android:paddingEnd="10dp" />

        <LinearLayout
            android:id="@+id/layout_checkboxes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:weightSum="4">

                <CheckBox
                    android:id="@+id/chk_revision_hidraulica"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="3"
                    android:checked="false"
                    android:text="@string/revision_hidraulica"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/img_rev_hidraulica"
                    android:layout_width="60dp"
                    android:layout_height="47dp"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:contentDescription="@string/empty_text"
                    app:srcCompat="@drawable/no_image_icon" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:weightSum="4">

                <CheckBox
                    android:id="@+id/chk_revision_aceite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="3"
                    android:checked="false"
                    android:text="@string/revision_aceite"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/img_rev_aceite"
                    android:layout_width="60dp"
                    android:layout_height="47dp"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:contentDescription="@string/empty_text"
                    app:srcCompat="@drawable/no_image_icon" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:weightSum="4">

                <CheckBox
                    android:id="@+id/chk_revision_calibracion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="3"
                    android:checked="false"
                    android:text="@string/revision_calibracion"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/img_rev_calibracion"
                    android:layout_width="60dp"
                    android:layout_height="47dp"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:contentDescription="@string/empty_text"
                    app:srcCompat="@drawable/no_image_icon" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:weightSum="4">

                <CheckBox
                    android:id="@+id/chk_revision_neumaticos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="3"
                    android:checked="false"
                    android:text="@string/revision_neumaticos"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/img_rev_neumatico"
                    android:layout_width="60dp"
                    android:layout_height="47dp"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:contentDescription="@string/empty_text"
                    app:srcCompat="@drawable/no_image_icon" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_firmas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="2"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_firma_tecnico"
                    android:layout_width="100dp"
                    android:layout_height="79dp"
                    android:layout_gravity="end"
                    android:layout_marginBottom="20dp"
                    android:contentDescription="@string/empty_text"
                    app:srcCompat="@drawable/no_image_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="@string/firma_tecnico" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_firma_supervisor"
                    android:layout_width="100dp"
                    android:layout_height="79dp"
                    android:layout_gravity="start"
                    android:layout_marginBottom="20dp"
                    android:contentDescription="@string/empty_text"
                    app:srcCompat="@drawable/no_image_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginBottom="5dp"
                    android:text="@string/firma_supervisor" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_subir_informe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/subir_informe_text" />

    </LinearLayout>


</ScrollView>